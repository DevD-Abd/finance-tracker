<div class="min-h-screen flex items-center justify-center bg-slate-50 py-8 sm:py-12 px-4 sm:px-6 lg:px-8">
  <div class="max-w-md w-full space-y-8">
    <div class="text-center">
      <h2 class="text-2xl sm:text-3xl font-bold text-slate-900 tracking-tight">Create your account</h2>
      <p class="mt-3 text-slate-600">Join Finance Tracker today</p>
    </div>
    
    <%= form_for(resource, as: resource_name, url: registration_path(resource_name), local: true, html: { class: "mt-8 space-y-6" }) do |f| %>
      <%= render "devise/shared/error_messages", resource: resource %>
      
      <div class="space-y-5">
        <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
          <div>
            <%= f.label :first_name, class: "block text-sm font-medium text-slate-700 mb-2" %>
            <%= f.text_field :first_name, 
                autofocus: true,
                autocomplete: "given-name",
                class: "w-full px-4 py-3 border border-slate-300 rounded-xl shadow-sm focus:outline-none focus:ring-2 focus:ring-slate-500 focus:border-slate-500 transition duration-200",
                placeholder: "First name" %>
          </div>
          
          <div>
            <%= f.label :last_name, class: "block text-sm font-medium text-slate-700 mb-2" %>
            <%= f.text_field :last_name, 
                autocomplete: "family-name",
                class: "w-full px-4 py-3 border border-slate-300 rounded-xl shadow-sm focus:outline-none focus:ring-2 focus:ring-slate-500 focus:border-slate-500 transition duration-200",
                placeholder: "Last name" %>
          </div>
        </div>

        <div>
          <%= f.label :email, class: "block text-sm font-medium text-slate-700 mb-2" %>
          <%= f.email_field :email, 
              autocomplete: "email",
              class: "w-full px-4 py-3 border border-slate-300 rounded-xl shadow-sm focus:outline-none focus:ring-2 focus:ring-slate-500 focus:border-slate-500 transition duration-200",
              placeholder: "Enter your email address" %>
        </div>

        <div>
          <%= f.label :password, class: "block text-sm font-medium text-slate-700 mb-2" do %>
            Password
            <% if @minimum_password_length %>
              <span class="text-xs text-slate-500">(<%= @minimum_password_length %> characters minimum)</span>
            <% end %>
          <% end %>
          <%= f.password_field :password, 
              autocomplete: "new-password",
              class: "w-full px-4 py-3 border border-slate-300 rounded-xl shadow-sm focus:outline-none focus:ring-2 focus:ring-slate-500 focus:border-slate-500 transition duration-200",
              placeholder: "Enter your password" %>
        </div>

        <div>
          <%= f.label :password_confirmation, "Confirm Password", class: "block text-sm font-medium text-slate-700 mb-2" %>
          <%= f.password_field :password_confirmation, 
              autocomplete: "new-password",
              class: "w-full px-4 py-3 border border-slate-300 rounded-xl shadow-sm focus:outline-none focus:ring-2 focus:ring-slate-500 focus:border-slate-500 transition duration-200",
              placeholder: "Confirm your password" %>
        </div>
      </div>

      <div>
        <%= f.submit "Create Account", 
            class: "group relative w-full flex justify-center py-3 px-4 border border-transparent text-sm font-medium rounded-xl text-white bg-slate-900 hover:bg-slate-800 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-slate-500 transition duration-200" %>
      </div>
    <% end %>

    <div class="text-center">
      <%= render "devise/shared/links" %>
    </div>
  </div>
</div>
