<div class="max-w-6xl mx-auto p-6">
  <div class="flex justify-between items-center mb-6">
    <h1 class="text-3xl font-bold text-gray-800">üë• My Friends</h1>
    <%= link_to "‚Üê Back to Portfolio", stocks_path, 
               class: "px-4 py-2 bg-gray-600 text-white font-medium rounded-md hover:bg-gray-700 focus:outline-none focus:ring-2 focus:ring-gray-500 focus:ring-offset-2 transition duration-200" %>
  </div>

  <!-- Search Form -->
  <div class="bg-white p-6 rounded-lg shadow-md mb-8">
    <h2 class="text-xl font-semibold text-gray-700 mb-4">üîç Search Friends & Users</h2>
    <%= form_with url: friendships_path, method: :get, local: true, class: "flex gap-4 items-end" do %>
      <div class="flex-1">
        <%= label_tag :search, "Search by name or email:", class: "block text-sm font-medium text-gray-700 mb-2" %>
        <%= text_field_tag :search, @search_query, placeholder: "e.g., John Doe, jane@example.com", 
                          class: "w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-blue-500 focus:border-blue-500" %>
      </div>
      <%= submit_tag "Search", 
                    class: "px-6 py-2 bg-blue-600 text-white font-medium rounded-md hover:bg-blue-700 focus:outline-none focus:ring-2 focus:ring-blue-500 focus:ring-offset-2 transition duration-200" %>
      <% if @search_query.present? %>
        <%= link_to "Clear", friendships_path, 
                   class: "px-6 py-2 bg-gray-600 text-white font-medium rounded-md hover:bg-gray-700 focus:outline-none focus:ring-2 focus:ring-gray-500 focus:ring-offset-2 transition duration-200" %>
      <% end %>
    <% end %>
    
    <div class="mt-4 text-sm text-gray-600">
      <% if @search_query.present? %>
        <p><strong>Search results for:</strong> "<%= @search_query %>"</p>
      <% else %>
        <p><strong>Tip:</strong> Search by first name, last name, or email to find specific friends or users</p>
      <% end %>
    </div>
  </div>

  <!-- Current Friends Section -->
  <div class="bg-white rounded-lg shadow-md overflow-hidden mb-8">
    <div class="px-6 py-4 border-b border-gray-200">
      <div class="flex items-center justify-between">
        <h2 class="text-xl font-semibold text-gray-800">
          <% if @search_query.present? %>
            Your Friends - Search Results (<%= @friends.count %> found)
          <% else %>
            Your Friends (<%= @friends.count %>)
          <% end %>
        </h2>
        <div class="flex items-center space-x-2">
          <div class="w-2 h-2 bg-green-500 rounded-full"></div>
          <span class="text-sm text-green-600 font-medium">Connected</span>
        </div>
      </div>
    </div>
    
    <% if @friends.any? %>
      <div class="divide-y divide-gray-200">
        <% @friends.each do |friend| %>
          <div class="px-6 py-4 hover:bg-gray-50 transition duration-200">
            <div class="flex items-center justify-between">
              <div class="flex items-center space-x-4">
                <div class="flex-shrink-0">
                  <div class="w-10 h-10 bg-emerald-100 rounded-full flex items-center justify-center">
                    <span class="text-emerald-600 font-semibold text-sm">
                      <%= friend.display_name.first(2).upcase %>
                    </span>
                  </div>
                </div>
                <div>
                  <%= link_to user_path(friend), class: "block hover:text-blue-600 transition duration-200" do %>
                    <div class="text-lg font-semibold text-gray-900"><%= friend.display_name %></div>
                    <div class="text-sm text-gray-600"><%= friend.email %></div>
                    <div class="text-xs text-gray-500">
                      Friend since <%= current_user.friendships.find_by(friend: friend)&.created_at&.strftime("%B %Y") %>
                    </div>
                  <% end %>
                </div>
              </div>
              <div class="text-right">
                <div class="text-sm text-gray-600 mb-2">
                  Tracking <%= friend.stocks.count %> stocks
                </div>
                <%= button_to "Remove Friend", friendship_path(current_user.friendships.find_by(friend: friend)), 
                             method: :delete,
                             data: { confirm: "Remove #{friend.display_name} from your friends?" },
                             class: "text-xs text-red-600 hover:text-red-800 bg-transparent border-none p-0 cursor-pointer" %>
              </div>
            </div>
          </div>
        <% end %>
      </div>
    <% else %>
      <div class="px-6 py-12 text-center">
        <div class="text-gray-400 text-6xl mb-4">üë•</div>
        <h3 class="text-lg font-medium text-gray-900 mb-2">No friends yet</h3>
        <p class="text-gray-600 mb-4">Start connecting with other Finance Tracker users below!</p>
      </div>
    <% end %>
  </div>

  <!-- Add Friends Section -->
  <div class="bg-white rounded-lg shadow-md overflow-hidden">
    <div class="px-6 py-4 border-b border-gray-200">
      <h2 class="text-xl font-semibold text-gray-800">
        <% if @search_query.present? %>
          Add New Friends - Search Results (<%= @all_users.count %> found)
        <% else %>
          Add New Friends
        <% end %>
      </h2>
      <p class="text-sm text-gray-600 mt-1">
        <% if @search_query.present? %>
          Users matching "<%= @search_query %>" that you can add as friends
        <% else %>
          Connect with other Finance Tracker users
        <% end %>
      </p>
    </div>
    
    <% if @all_users.any? %>
      <div class="divide-y divide-gray-200">
        <% @all_users.each do |user| %>
          <div class="px-6 py-4 hover:bg-gray-50 transition duration-200">
            <div class="flex items-center justify-between">
              <div class="flex items-center space-x-4">
                <div class="flex-shrink-0">
                  <div class="w-10 h-10 bg-blue-100 rounded-full flex items-center justify-center">
                    <span class="text-blue-600 font-semibold text-sm">
                      <%= user.display_name.first(2).upcase %>
                    </span>
                  </div>
                </div>
                <div>
                  <%= link_to user_path(user), class: "block hover:text-blue-600 transition duration-200" do %>
                    <div class="text-lg font-semibold text-gray-900"><%= user.display_name %></div>
                    <div class="text-sm text-gray-600"><%= user.email %></div>
                    <div class="text-xs text-gray-500">
                      Tracking <%= user.stocks.count %> stocks
                    </div>
                  <% end %>
                </div>
              </div>
              <div class="text-right">
                <%= button_to "Add Friend", friendships_path, 
                             method: :post,
                             params: { friend_id: user.id },
                             class: "px-4 py-2 bg-emerald-600 text-white font-medium rounded-md hover:bg-emerald-700 focus:outline-none focus:ring-2 focus:ring-emerald-500 focus:ring-offset-2 transition duration-200" %>
              </div>
            </div>
          </div>
        <% end %>
      </div>
    <% else %>
      <div class="px-6 py-12 text-center">
        <div class="text-gray-400 text-6xl mb-4">üéâ</div>
        <h3 class="text-lg font-medium text-gray-900 mb-2">You're friends with everyone!</h3>
        <p class="text-gray-600">You've connected with all other Finance Tracker users.</p>
      </div>
    <% end %>
  </div>
</div>
