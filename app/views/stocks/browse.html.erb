<div class="max-w-6xl mx-auto p-6">
  <div class="flex justify-between items-center mb-6">
    <h1 class="text-3xl font-bold text-gray-800">üîç Browse Stocks</h1>
    <%= link_to "‚Üê Back to My Portfolio", stocks_path, 
               class: "px-4 py-2 bg-gray-600 text-white font-medium rounded-md hover:bg-gray-700 focus:outline-none focus:ring-2 focus:ring-gray-500 focus:ring-offset-2 transition duration-200" %>
  </div>

  <!-- Search Form -->
  <div class="bg-white p-6 rounded-lg shadow-md mb-8">
    <h2 class="text-xl font-semibold text-gray-700 mb-4">Search Stocks</h2>
    <%= form_with url: browse_stocks_path, method: :get, local: true, class: "flex gap-4 items-end" do %>
      <div class="flex-1">
        <%= label_tag :search, "Search by ticker symbol or company name:", class: "block text-sm font-medium text-gray-700 mb-2" %>
        <%= text_field_tag :search, @search_query, placeholder: "e.g., AAPL, Apple, Microsoft", 
                          class: "w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-blue-500 focus:border-blue-500" %>
      </div>
      <%= submit_tag "Search", 
                    class: "px-6 py-2 bg-blue-600 text-white font-medium rounded-md hover:bg-blue-700 focus:outline-none focus:ring-2 focus:ring-blue-500 focus:ring-offset-2 transition duration-200" %>
      <% if @search_query.present? %>
        <%= link_to "Clear", browse_stocks_path, 
                   class: "px-6 py-2 bg-gray-600 text-white font-medium rounded-md hover:bg-gray-700 focus:outline-none focus:ring-2 focus:ring-gray-500 focus:ring-offset-2 transition duration-200" %>
      <% end %>
    <% end %>
    
    <div class="mt-4 text-sm text-gray-600">
      <% if @search_query.present? %>
        <p><strong>Search results for:</strong> "<%= @search_query %>"</p>
      <% else %>
        <p><strong>Popular stocks:</strong> Browse and track stocks from major companies</p>
      <% end %>
    </div>
  </div>

  <!-- Stocks List -->
  <div class="bg-white rounded-lg shadow-md overflow-hidden">
    <div class="px-6 py-4 border-b border-gray-200">
      <div class="flex items-center justify-between">
        <h2 class="text-xl font-semibold text-gray-800">
          <% if @search_query.present? %>
            Search Results (<%= @stocks.count %> found)
          <% else %>
            Popular Stocks (<%= @stocks.count %> stocks)
          <% end %>
        </h2>
        <div class="flex items-center space-x-2">
          <div class="w-2 h-2 bg-green-500 rounded-full animate-pulse"></div>
          <span class="text-sm text-green-600 font-medium">Real-time data via Alpha Vantage</span>
        </div>
      </div>
    </div>
    
    <% if @stocks.any? %>
      <div class="divide-y divide-gray-200">
        <% @stocks.each do |stock| %>
          <div class="px-6 py-4 hover:bg-gray-50 transition duration-200">
            <div class="flex items-center justify-between">
              <div class="flex items-center space-x-4">
                <div class="flex-shrink-0">
                  <div class="w-10 h-10 bg-blue-100 rounded-full flex items-center justify-center">
                    <span class="text-blue-600 font-semibold text-sm"><%= stock.ticker[0..1] %></span>
                  </div>
                </div>
                <div>
                  <%= link_to stock_path(stock.ticker), class: "block hover:text-blue-600 transition duration-200" do %>
                    <div class="text-lg font-semibold text-gray-900"><%= stock.ticker %></div>
                    <div class="text-sm text-gray-600"><%= stock.name %></div>
                  <% end %>
                </div>
              </div>
              <div class="text-right flex items-center space-x-4">
                <div>
                  <div class="text-lg font-bold text-green-600">$<%= number_with_precision(stock.last_price, precision: 2) %></div>
                  <div class="text-sm text-gray-500">Current Price</div>
                </div>
                <div>
                  <% if current_user.stocks.include?(stock) %>
                    <span class="px-3 py-1 bg-green-100 text-green-800 text-sm font-medium rounded-full">
                      ‚úì Tracking
                    </span>
                  <% else %>
                    <%= button_to "Track Stock", track_stock_path(stock), method: :post,
                                 class: "px-4 py-2 bg-blue-600 text-white font-medium rounded-md hover:bg-blue-700 focus:outline-none focus:ring-2 focus:ring-blue-500 focus:ring-offset-2 transition duration-200" %>
                  <% end %>
                </div>
              </div>
            </div>
          </div>
        <% end %>
      </div>
    <% else %>
      <div class="px-6 py-12 text-center">
        <div class="text-gray-400 text-6xl mb-4">üîç</div>
        <% if @search_query.present? %>
          <h3 class="text-lg font-medium text-gray-900 mb-2">No stocks found for "<%= @search_query %>"</h3>
          <p class="text-gray-600 mb-4">Try searching with a different ticker symbol or company name.</p>
          <%= link_to "Clear Search", browse_stocks_path, 
                     class: "inline-flex items-center px-4 py-2 bg-blue-600 text-white font-medium rounded-md hover:bg-blue-700 transition duration-200" %>
        <% else %>
          <h3 class="text-lg font-medium text-gray-900 mb-2">No stocks available</h3>
          <p class="text-gray-600 mb-4">Use the search above to find and add stocks.</p>
        <% end %>
      </div>
    <% end %>
  </div>

  <% if @stocks.any? %>
    <div class="mt-6 text-center">
      <p class="text-sm text-gray-500">
        Click "Track Stock" to add any stock to your personal portfolio
      </p>
    </div>
  <% end %>
</div>
