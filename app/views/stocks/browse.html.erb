<div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-8">
  <!-- Header Section -->
  <div class="flex flex-col sm:flex-row sm:items-center justify-between mb-8">
    <div>
      <h1 class="text-3xl font-bold text-slate-900 tracking-tight">Browse Stocks</h1>
      <p class="mt-2 text-slate-600">Discover and track new investment opportunities</p>
    </div>
    <%= link_to "Back to Portfolio", stocks_path, 
               class: "mt-4 sm:mt-0 inline-flex items-center px-6 py-3 bg-slate-600 text-white font-medium rounded-xl hover:bg-slate-700 focus:outline-none focus:ring-2 focus:ring-slate-500 focus:ring-offset-2 transition duration-200 shadow-sm" %>
  </div>

  <!-- Search Form -->
  <div class="bg-white rounded-2xl shadow-sm border border-slate-200 p-6 mb-8">
    <h2 class="text-xl font-semibold text-slate-900 mb-4">Search Stocks</h2>
    <%= form_with url: browse_stocks_path, method: :get, local: true, class: "flex flex-col sm:flex-row gap-4" do %>
      <div class="flex-1">
        <%= label_tag :search, "Search by symbol or company name", class: "block text-sm font-medium text-slate-700 mb-2" %>
        <%= text_field_tag :search, @search_query, placeholder: "e.g., AAPL, Apple, Microsoft", 
                          class: "w-full px-4 py-3 border border-slate-300 rounded-xl shadow-sm focus:outline-none focus:ring-2 focus:ring-slate-500 focus:border-slate-500 transition duration-200" %>
      </div>
      <div class="flex gap-4 sm:items-end sm:mt-0 mt-4 sm:pb-0 pb-1">
        <%= submit_tag "Search", 
              class: "px-6 py-3 bg-slate-600 text-white font-medium rounded-xl hover:bg-slate-800 focus:outline-none focus:ring-2 focus:ring-slate-500 focus:ring-offset-2 transition duration-200 shadow-sm" %>
        <% if @search_query.present? %>
          <%= link_to "Clear", browse_stocks_path, 
             class: "px-6 py-3 bg-slate-100 text-slate-700 font-medium rounded-xl hover:bg-slate-200 focus:outline-none focus:ring-2 focus:ring-slate-500 focus:ring-offset-2 transition duration-200" %>
        <% end %>
      </div>
    <% end %>
    
    <div class="mt-4 text-sm text-slate-500">
      <% if @search_query.present? %>
        <p>Search results for "<span class="font-medium text-slate-700"><%= @search_query %></span>"</p>
      <% else %>
        <p>Browse and discover stocks from major companies to add to your portfolio</p>
      <% end %>
    </div>
  </div>

  <!-- Stocks List -->
  <div class="bg-white rounded-2xl shadow-sm border border-slate-200 overflow-hidden">
    <div class="px-6 py-4 border-b border-slate-200">
      <div class="flex items-center justify-between">
        <div>
          <h2 class="text-xl font-semibold text-slate-900">
            <% if @search_query.present? %>
              Search Results (<%= @stocks.count %> found)
            <% else %>
              Available Stocks (<%= @stocks.count %> stocks)
            <% end %>
          </h2>
          <p class="text-slate-600 text-sm mt-1">Click any stock to view details or add to your portfolio</p>
        </div>
        <div class="flex items-center space-x-2">
          <div class="w-2 h-2 bg-emerald-500 rounded-full animate-pulse"></div>
          <span class="text-sm text-emerald-600 font-medium">Real-time data</span>
        </div>
      </div>
    </div>
    
    <% if @stocks.any? %>
      <div class="divide-y divide-slate-200">
        <% @stocks.each do |stock| %>
          <div class="px-6 py-4 hover:bg-slate-50 transition duration-200">
            <div class="flex items-center justify-between">
              <div class="flex items-center space-x-4">
                <div class="flex-shrink-0">
                  <div class="w-12 h-12 bg-slate-100 rounded-xl flex items-center justify-center">
                    <span class="text-slate-700 font-semibold text-sm"><%= stock.ticker.first(2) %></span>
                  </div>
                </div>
                <div>
                  <%= link_to stock_path(stock.ticker), class: "block hover:text-slate-900 transition duration-200" do %>
                    <div class="text-lg font-semibold text-slate-900"><%= stock.ticker %></div>
                    <div class="text-sm text-slate-500"><%= stock.name %></div>
                  <% end %>
                </div>
              </div>
              <div class="text-right flex items-center space-x-4">
                <div>
                  <div class="text-xl font-bold text-slate-900">$<%= number_with_precision(stock.last_price, precision: 2) %></div>
                  <div class="text-sm text-slate-500">Current Price</div>
                </div>
                <% if current_user.stocks.include?(stock) %>
                  <span class="px-8 py-2 bg-emerald-50 text-emerald-600 font-medium rounded-lg text-sm">In Portfolio</span>
                <% else %>
                  <%= button_to "Add to Portfolio", track_stock_path(stock), method: :post,
                      class: "px-4 py-2 bg-slate-600 text-white font-medium rounded-lg hover:bg-slate-800 focus:outline-none focus:ring-2 focus:ring-slate-500 focus:ring-offset-2 transition duration-200 text-sm" %>
                <% end %>
              </div>
            </div>
          </div>
        <% end %>
      </div>
    <% else %>
      <div class="px-6 py-16 text-center">
        <div class="w-16 h-16 bg-slate-100 rounded-full flex items-center justify-center mx-auto mb-4">
          <svg class="w-8 h-8 text-slate-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z"/>
          </svg>
        </div>
        <% if @search_query.present? %>
          <h3 class="text-lg font-semibold text-slate-900 mb-2">No stocks found</h3>
          <p class="text-slate-600 mb-6">No stocks match "<%= @search_query %>". Try searching with a different term.</p>
          <%= link_to "Clear Search", browse_stocks_path, 
                     class: "inline-flex items-center px-6 py-3 bg-slate-900 text-white font-medium rounded-xl hover:bg-slate-800 transition duration-200 shadow-sm" %>
        <% else %>
          <h3 class="text-lg font-semibold text-slate-900 mb-2">No stocks available</h3>
          <p class="text-slate-600 mb-6">Use the search above to find stocks to add to your portfolio.</p>
        <% end %>
      </div>
    <% end %>
  </div>

  <% if @stocks.any? %>
    <div class="mt-6 text-center">
      <p class="text-sm text-slate-500">
        Found a stock you like? Add it to your portfolio to track its performance.
      </p>
    </div>
  <% end %>
</div>
