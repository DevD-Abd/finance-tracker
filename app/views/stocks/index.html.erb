<div class="max-w-4xl mx-auto p-6">
  <h1 class="text-3xl font-bold text-gray-800 mb-6">ðŸ“ˆ Stock Portfolio Tracker</h1>

  <!-- Add Stock Form -->
  <div class="bg-white p-6 rounded-lg shadow-md mb-8">
    <h2 class="text-xl font-semibold text-gray-700 mb-4">Add New Stock</h2>
    <%= form_with url: stocks_path, method: :post, local: true, class: "flex gap-4 items-end" do %>
      <div class="flex-1">
        <%= label_tag :ticker, "Stock Ticker Symbol:", class: "block text-sm font-medium text-gray-700 mb-2" %>
        <%= text_field_tag :ticker, "", placeholder: "e.g., AAPL, TSLA, GOOGL", 
                          class: "w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-blue-500 focus:border-blue-500" %>
      </div>
      <%= submit_tag "Add Stock", 
                    class: "px-6 py-2 bg-blue-600 text-white font-medium rounded-md hover:bg-blue-700 focus:outline-none focus:ring-2 focus:ring-blue-500 focus:ring-offset-2 transition duration-200" %>
    <% end %>
    
    <div class="mt-4 text-sm text-gray-600">
      <p><strong>Popular stocks:</strong> AAPL, MSFT, GOOGL, AMZN, TSLA, META, NFLX, NVDA, AMD, INTC</p>
    </div>
  </div>

  <!-- Stock List -->
  <div class="bg-white rounded-lg shadow-md overflow-hidden">
    <div class="px-6 py-4 border-b border-gray-200">
      <div class="flex items-center justify-between">
        <h2 class="text-xl font-semibold text-gray-800">Your Portfolio (<%= @stocks.count %> stocks)</h2>
        <div class="flex items-center space-x-2">
          <div class="w-2 h-2 bg-green-500 rounded-full animate-pulse"></div>
          <span class="text-sm text-green-600 font-medium">Real-time data via Alpha Vantage</span>
        </div>
      </div>
    </div>
    
    <% if @stocks.any? %>
      <div class="divide-y divide-gray-200">
        <% @stocks.each do |stock| %>
          <div class="px-6 py-4 hover:bg-gray-50 transition duration-200">
            <div class="flex items-center justify-between">
              <div class="flex items-center space-x-4">
                <div class="flex-shrink-0">
                  <div class="w-10 h-10 bg-blue-100 rounded-full flex items-center justify-center">
                    <span class="text-blue-600 font-semibold text-sm"><%= stock.ticker[0..1] %></span>
                  </div>
                </div>
                <div>
                  <%= link_to stock_path(stock.ticker), class: "block hover:text-blue-600 transition duration-200" do %>
                    <div class="text-lg font-semibold text-gray-900"><%= stock.ticker %></div>
                    <div class="text-sm text-gray-600"><%= stock.name %></div>
                  <% end %>
                </div>
              </div>
              <div class="text-right">
                <div class="text-lg font-bold text-green-600">$<%= number_with_precision(stock.last_price, precision: 2) %></div>
                <div class="text-sm text-gray-500">Last Price</div>
              </div>
            </div>
          </div>
        <% end %>
      </div>
    <% else %>
      <div class="px-6 py-12 text-center">
        <div class="text-gray-400 text-6xl mb-4">ðŸ“Š</div>
        <h3 class="text-lg font-medium text-gray-900 mb-2">No stocks tracked yet</h3>
        <p class="text-gray-600 mb-4">Start building your portfolio by adding your first stock above.</p>
      </div>
    <% end %>
  </div>

  <% if @stocks.any? %>
    <div class="mt-6 text-center">
      <p class="text-sm text-gray-500">
        Portfolio Value: <span class="font-semibold text-gray-700">$<%= number_with_precision(@stocks.sum(:last_price), precision: 2) %></span>
      </p>
    </div>
  <% end %>
</div>
