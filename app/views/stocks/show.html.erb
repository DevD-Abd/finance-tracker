<div class="max-w-4xl mx-auto p-6">
  <div class="bg-white rounded-lg shadow-md overflow-hidden">
    <!-- Header -->
    <div class="px-6 py-4 border-b border-gray-200 bg-gradient-to-r from-blue-500 to-blue-600">
      <div class="flex items-center justify-between">
        <div>
          <h1 class="text-2xl font-bold text-white"><%= @stock.ticker %></h1>
          <p class="text-blue-100"><%= @stock.name %></p>
        </div>
        <div class="text-right">
          <div class="text-3xl font-bold text-white">$<%= number_with_precision(@stock.last_price, precision: 2) %></div>
          <div class="flex items-center justify-end space-x-2 text-blue-100 text-sm">
            <div class="w-2 h-2 bg-green-400 rounded-full animate-pulse"></div>
            <span>Real-time Price</span>
          </div>
        </div>
      </div>
    </div>

    <!-- Stock Details -->
    <div class="px-6 py-8">
      <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
        <!-- Price Information -->
        <div class="bg-gray-50 p-4 rounded-lg">
          <h3 class="text-lg font-semibold text-gray-800 mb-4">Price Information</h3>
          <div class="space-y-3">
            <div class="flex justify-between">
              <span class="text-gray-600">Last Price:</span>
              <span class="font-semibold text-green-600">$<%= number_with_precision(@stock.last_price, precision: 2) %></span>
            </div>
            <div class="flex justify-between">
              <span class="text-gray-600">Last Updated:</span>
              <span class="text-gray-800"><%= @stock.updated_at.strftime("%B %d, %Y at %I:%M %p") %></span>
            </div>
          </div>
        </div>

        <!-- Company Information -->
        <div class="bg-gray-50 p-4 rounded-lg">
          <h3 class="text-lg font-semibold text-gray-800 mb-4">Company Information</h3>
          <div class="space-y-3">
            <div class="flex justify-between">
              <span class="text-gray-600">Symbol:</span>
              <span class="font-semibold text-gray-800"><%= @stock.ticker %></span>
            </div>
            <div class="flex justify-between">
              <span class="text-gray-600">Company:</span>
              <span class="text-gray-800"><%= @stock.name %></span>
            </div>
          </div>
        </div>
      </div>

      <!-- Actions -->
      <div class="mt-8 flex gap-4">
        <%= link_to "â† Back to Portfolio", stocks_path, 
                   class: "px-6 py-2 bg-gray-600 text-white font-medium rounded-md hover:bg-gray-700 focus:outline-none focus:ring-2 focus:ring-gray-500 focus:ring-offset-2 transition duration-200" %>
        
        <% if @user_stock %>
          <%= button_to "ðŸ”„ Refresh Price", stock_path(@stock.ticker), method: :patch,
                       class: "px-6 py-2 bg-blue-600 text-white font-medium rounded-md hover:bg-blue-700 focus:outline-none focus:ring-2 focus:ring-blue-500 focus:ring-offset-2 transition duration-200" %>
          
          <%= button_to "Remove from Portfolio", untrack_stock_path(@stock), method: :delete,
                     data: { confirm: "Remove #{@stock.ticker} from your portfolio?" },
                     class: "px-6 py-2 bg-red-600 text-white font-medium rounded-md hover:bg-red-700 focus:outline-none focus:ring-2 focus:ring-red-500 focus:ring-offset-2 transition duration-200" %>
        <% else %>
          <%= button_to "Add to Portfolio", track_stock_path(@stock), method: :post,
                     class: "px-6 py-2 bg-green-600 text-white font-medium rounded-md hover:bg-green-700 focus:outline-none focus:ring-2 focus:ring-green-500 focus:ring-offset-2 transition duration-200" %>
        <% end %>
      </div>
    </div>
  </div>

  <!-- Price History Simulation -->
  <div class="mt-6 bg-white rounded-lg shadow-md p-6">
    <h3 class="text-lg font-semibold text-gray-800 mb-4">ðŸ“Š Price Chart Simulation</h3>
    <div class="bg-gray-100 p-8 rounded-lg text-center">
      <div class="text-gray-600 text-4xl mb-4">ðŸ“ˆ</div>
      <p class="text-gray-600">Price chart visualization would appear here</p>
      <p class="text-sm text-gray-500 mt-2">Connect to a charting library like Chart.js for real charts</p>
    </div>
  </div>
</div>
