<nav class="bg-emerald-500 shadow-lg border-b border-emerald-600">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <div class="flex justify-between items-center h-16">
      <!-- App Name/Logo -->
      <div class="flex-shrink-0">
        <%= link_to root_path, class: "text-white text-xl font-bold hover:text-emerald-100 transition duration-200" do %>
          Finance Tracker
        <% end %>
      </div>

      <!-- Navigation Links -->
      <div class="hidden md:block">
        <div class="ml-10 flex items-baseline space-x-4">
          <% if user_signed_in? %>
            <!-- User is logged in -->
            <span class="text-emerald-100 text-sm">
              Welcome, <%= current_user.email %>
            </span>
            <%= link_to "My Portfolio", stocks_path, 
                class: "text-white hover:bg-emerald-600 hover:text-emerald-100 px-3 py-2 rounded-md text-sm font-medium transition duration-200" %>
            <%= link_to "Browse Stocks", browse_stocks_path, 
                class: "text-white hover:bg-emerald-600 hover:text-emerald-100 px-3 py-2 rounded-md text-sm font-medium transition duration-200" %>
            <%= button_to "Logout", destroy_user_session_path, 
                method: :delete,
                class: "bg-slate-600 hover:bg-slate-700 text-white px-4 py-2 rounded-md text-sm font-medium transition duration-200 shadow-sm" %>
          <% else %>
            <!-- User is not logged in -->
            <%= link_to "Login", new_user_session_path, 
                class: "text-white hover:bg-emerald-600 hover:text-emerald-100 px-3 py-2 rounded-md text-sm font-medium transition duration-200" %>
            <%= link_to "Sign Up", new_user_registration_path, 
                class: "bg-emerald-300 hover:bg-emerald-400 text-gray-900 px-4 py-2 rounded-md text-sm font-medium transition duration-200 shadow-sm" %>
          <% end %>
        </div>
      </div>

      <!-- Mobile menu button -->
      <div class="md:hidden">
        <button type="button" class="mobile-menu-button text-white hover:text-emerald-100 focus:outline-none focus:text-emerald-100" aria-label="Main menu">
          <svg class="h-6 w-6" stroke="currentColor" fill="none" viewBox="0 0 24 24">
            <path class="menu-icon" stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16"></path>
            <path class="close-icon hidden" stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"></path>
          </svg>
        </button>
      </div>
    </div>
  </div>

  <!-- Mobile Menu -->
  <div class="mobile-menu hidden md:hidden">
    <div class="px-2 pt-2 pb-3 space-y-1 bg-emerald-400 border-t border-emerald-600">
      <% if user_signed_in? %>
        <div class="text-emerald-900 text-sm px-3 py-2">
          Welcome, <%= current_user.email %>
        </div>
        <%= link_to "Dashboard", root_path, 
            class: "text-emerald-900 hover:bg-emerald-500 hover:text-white block px-3 py-2 rounded-md text-base font-medium transition duration-200" %>
        <%= button_to 'Logout', destroy_user_session_path, 
            method: :delete,
            class: "text-emerald-900 hover:bg-slate-600 hover:text-white block px-3 py-2 rounded-md text-base font-medium transition duration-200" %>
      <% else %>
        <%= link_to "Login", new_user_session_path, 
            class: "text-emerald-900 hover:bg-emerald-500 hover:text-white block px-3 py-2 rounded-md text-base font-medium transition duration-200" %>
        <%= link_to "Sign Up", new_user_registration_path, 
            class: "text-emerald-900 hover:bg-emerald-300 hover:text-gray-900 block px-3 py-2 rounded-md text-base font-medium transition duration-200" %>
      <% end %>
    </div>
  </div>
</nav>

<script>
  // Mobile menu toggle
  document.addEventListener('DOMContentLoaded', function() {
    const menuButton = document.querySelector('.mobile-menu-button');
    const mobileMenu = document.querySelector('.mobile-menu');
    const menuIcon = document.querySelector('.menu-icon');
    const closeIcon = document.querySelector('.close-icon');

    if (menuButton && mobileMenu) {
      menuButton.addEventListener('click', function() {
        mobileMenu.classList.toggle('hidden');
        menuIcon.classList.toggle('hidden');
        closeIcon.classList.toggle('hidden');
      });
    }
  });
</script>