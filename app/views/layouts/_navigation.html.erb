<nav class="bg-white shadow-sm border-b border-slate-200" data-controller="mobile-menu">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <div class="flex justify-between items-center h-16">
      <!-- App Name/Logo -->
      <div class="flex-shrink-0">
        <%= link_to root_path, class: "text-slate-900 text-xl font-semibold tracking-tight hover:text-slate-700 transition duration-200" do %>
          Finance Tracker
        <% end %>
      </div>

      <!-- Navigation Links -->
      <div class="hidden md:block">
        <div class="ml-10 flex items-baseline space-x-1">
          <% if user_signed_in? %>
            <!-- User is logged in -->
            <span class="text-slate-500 text-sm font-medium mr-6">
              Welcome, <%= current_user.display_name %>
            </span>
            <%= link_to "Portfolio", stocks_path, 
                class: "text-slate-700 hover:bg-slate-100 hover:text-slate-900 px-4 py-2 rounded-lg text-sm font-medium transition duration-200" %>
            <%= link_to "Browse", browse_stocks_path, 
                class: "text-slate-700 hover:bg-slate-100 hover:text-slate-900 px-4 py-2 rounded-lg text-sm font-medium transition duration-200" %>
            <%= link_to "Friends", friendships_path, 
                class: "text-slate-700 hover:bg-slate-100 hover:text-slate-900 px-4 py-2 rounded-lg text-sm font-medium transition duration-200" %>
            
            <!-- User Dropdown -->
            <div class="relative ml-3">
              <div class="flex items-center space-x-3">
                <%= link_to edit_user_registration_path, 
                    class: "text-slate-500 hover:text-slate-700 px-3 py-2 text-sm font-medium transition duration-200" do %>
                  Settings
                <% end %>
                <%= button_to 'Logout', destroy_user_session_path, 
                    method: :delete,
                    class: "text-slate-500 cursor-pointer hover:text-red-600 px-3 py-2 text-sm font-medium transition duration-200" %>
              </div>
            </div>
          <% else %>
            <!-- User not logged in -->
            <%= link_to "Login", new_user_session_path, 
                class: "text-slate-700 hover:bg-slate-100 hover:text-slate-900 px-4 py-2 rounded-lg text-sm font-medium transition duration-200" %>
            <%= link_to "Sign Up", new_user_registration_path, 
                class: "bg-slate-900 text-white hover:bg-slate-800 px-4 py-2 rounded-lg text-sm font-medium transition duration-200" %>
          <% end %>
        </div>
      </div>

      <!-- Mobile menu button -->
      <div class="md:hidden">
        <button type="button" 
                class="mobile-menu-button text-slate-500 hover:text-slate-700 focus:outline-none focus:text-slate-700" 
                aria-label="Main menu"
                data-action="click->mobile-menu#toggle"
                data-mobile-menu-target="button">
          <svg class="h-6 w-6" stroke="currentColor" fill="none" viewBox="0 0 24 24">
            <path class="menu-icon" stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16"></path>
            <path class="close-icon hidden" stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"></path>
          </svg>
        </button>
      </div>
    </div>
  </div>

  <!-- Mobile Menu -->
  <div class="mobile-menu hidden md:hidden" data-mobile-menu-target="menu">
    <div class="px-2 pt-2 pb-3 space-y-1 bg-white border-t border-slate-200">
      <% if user_signed_in? %>
        <div class="text-slate-500 text-sm px-3 py-2 font-medium">
          Welcome, <%= current_user.display_name %>
        </div>
        <%= link_to "Portfolio", stocks_path, 
            class: "text-slate-700 hover:bg-slate-100 hover:text-slate-900 block px-3 py-2 rounded-md text-base font-medium transition duration-200" %>
        <%= link_to "Browse", browse_stocks_path, 
            class: "text-slate-700 hover:bg-slate-100 hover:text-slate-900 block px-3 py-2 rounded-md text-base font-medium transition duration-200" %>
        <%= link_to "Friends", friendships_path, 
            class: "text-slate-700 hover:bg-slate-100 hover:text-slate-900 block px-3 py-2 rounded-md text-base font-medium transition duration-200" %>
        <%= link_to "Settings", edit_user_registration_path, 
            class: "text-slate-700 hover:bg-slate-100 hover:text-slate-900 block px-3 py-2 rounded-md text-base font-medium transition duration-200" %>
        <%= button_to 'Logout', destroy_user_session_path, 
            method: :delete,
            class: "text-slate-700 cursor-pointer hover:bg-red-50 hover:text-red-600 block px-3 py-2 rounded-md text-base font-medium transition duration-200 w-full text-left" %>
      <% else %>
        <%= link_to "Login", new_user_session_path, 
            class: "text-slate-700 hover:bg-slate-100 hover:text-slate-900 block px-3 py-2 rounded-md text-base font-medium transition duration-200" %>
        <%= link_to "Sign Up", new_user_registration_path, 
            class: "text-slate-700 hover:bg-slate-100 hover:text-slate-900 block px-3 py-2 rounded-md text-base font-medium transition duration-200" %>
      <% end %>
    </div>
  </div>
</nav>