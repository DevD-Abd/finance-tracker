  
  <!-- Flash Messages -->
  <% if notice %>
    <div class="bg-emerald-100 border border-emerald-400 text-emerald-700 px-4 py-3 mx-4 mt-4 rounded relative" role="alert">
      <span class="block sm:inline"><%= notice %></span>
    </div>
  <% end %>
  
  <% if alert %>
    <div class="bg-red-100 border border-red-400 text-red-700 px-4 py-3 mx-4 mt-4 rounded relative" role="alert">
      <span class="block sm:inline"><%= alert %></span>
    </div>
  <% end %>