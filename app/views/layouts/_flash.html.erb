  
  <!-- Flash Messages -->
  <% if notice %>
    <div class="bg-emerald-50 border-l-4 border-emerald-400 text-emerald-800 px-4 sm:px-6 py-3 mx-4 mt-4 rounded-r-lg shadow-sm animate-fade-in opacity-0" 
         role="alert" 
         data-controller="flash-message"
         style="animation: fadeIn 0.4s ease-out forwards;">
      <div class="flex items-center justify-between">
        <div class="flex items-center">
          <div class="flex-shrink-0">
            <svg class="w-5 h-5 text-emerald-400" fill="currentColor" viewBox="0 0 20 20" aria-hidden="true">
              <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd"/>
            </svg>
          </div>
          <div class="ml-3 flex-1">
            <span class="text-sm font-medium break-words"><%= notice %></span>
          </div>
        </div>
        <div class="ml-4 flex-shrink-0">
          <button type="button" 
                  class="group inline-flex items-center justify-center w-8 h-8 rounded-full text-emerald-600 hover:text-emerald-800 hover:bg-emerald-100 focus:outline-none focus:ring-2 focus:ring-emerald-500 focus:ring-offset-2 focus:ring-offset-emerald-50 transition-all duration-200 ease-in-out" 
                  data-action="click->flash-message#dismiss"
                  aria-label="Dismiss notification"
                  title="Dismiss">
            <svg class="w-4 h-4 group-hover:scale-110 transition-transform duration-150" 
                 fill="none" 
                 stroke="currentColor" 
                 viewBox="0 0 24 24" 
                 aria-hidden="true">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12" />
            </svg>
          </button>
        </div>
      </div>
    </div>
  <% end %>
  
